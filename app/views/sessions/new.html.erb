<div class="section">
  <div class="container">
	  <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 is-spaced has-text-centered">Log In</h2>
        <%= form_with url: sessions_path, local: true do |f| %>
          <div class="field">
            <div class="control">
              <%= f.label :name, class: "label" %>
              <%= f.text_field :name, class: "input", autofocus: true %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.submit "Log in", class: "button is-primary is-large is-fullwidth" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


